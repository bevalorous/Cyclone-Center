// NOTE: Circles should be 5 9 16 25 37

$eye-wall-diameters = 15 30 50 80 120

km-to-px(km, scale = (485 / 600))
  deg = (km / 111.12)
  unit((deg / 0.02337) * scale, px)

#classify
  .classifier
    font-size 12px
    panel()
    float right
    margin 30px
    overflow hidden

    img
      box-sizing border-box
      display block

    .main-pair
      clearfix()
      overflow hidden
      padding 20px
      position relative

      img
        transition all 0.5s ease-in-out
        float left
        height 300px
        position relative
        width 300px

        &.previous
          position absolute
          margin-left -320px

        &.subject
          margin-right 15px
          margin-left 0
          z-index 1

        &.match
          margin-left 0

        &.selected
          border 3px solid $greenish

      .point
        transition height 0.5s ease-in-out, opacity 0.5s ease-in-out, width 0.5s ease-in-out
        border 0 solid transparent
        border-width 2px 0 0 2px
        height 50px
        left -50%
        opacity 0
        pointer-events none
        position absolute
        top -50%
        width 50px
        z-index 2

        &:before
          border 0 solid transparent
          border-width 0 2px 2px 0
          bottom 100%
          content " "
          height 100%
          position absolute
          right 100%
          width 100%

        &.center
        &.center:before
          border-color #fff

        &.red,
        &.red:before
          border-color #000

      .calipers
        border 2px solid #000
        border-radius 50%
        box-shadow 0 0 0 2px #fff
        height 17.3px
        left -50%
        margin -24px 0 0 -24px
        pointer-events none
        position absolute
        top -50%
        width 17.3px
        z-index 2

        &:after
          background #fff
          color #000
          content: "0.5Â°"
          font-weight bold
          left: 50%
          position absolute
          text-align center
          top -1.5em
          width 25px

      .eye.circle
        transition opacity 0.5s ease-in-out
        border 1px solid #000
        border-radius 50%
        opacity 0
        position absolute
        pointer-events none
        z-index 2

        for km in $eye-wall-diameters
          &[data-size={'"' + km + '"'}]
            $diameter = km-to-px(km)
            height $diameter
            width $diameter
            margin ($diameter / -2) 0 0 ($diameter / -2)

    .step
      border-top 1px solid $gray-light
      border-width 1px 0
      display none
      padding 0 20px
      text-align center

      p
        margin 20px 0
        font-weight 600

        & + .heading
          margin-top -10px

        &.heading
          font-family "Open Sans Condensed"
          font-weight 700
          font-size  20px

          & + p
            margin-top -10px

      [data-popup]
        border-bottom 0 // Remove default underline

      .swatch
        box-sizing(border-box)
        background #000
        box-shadow 0 0 1px #000 inset
        display inline-block

        &.coldest  {background: $coldest;}
        &.colder   {background: $colder;}
        &.cold     {background: $cold;}
        &.coldish  {background: $coldish;}
        &.moderate {background: $moderate;}
        &.warmish  {background: $warmish;}
        &.warm     {background: $warm;}
        &.warmer   {background: $warmer;}
        &.warmest  {background: $warmest;}

      .help-ball
        standard-button()
        border-radius 50%
        font bold 14px/16px "Open Sans", sans-serif
        height 16px
        margin 0
        padding 0
        width 16px

      &.stronger button
        standard-button()

      &.eye button
        standard-button()

        .circle
          display inline-block
          border 1px solid #000
          border-radius 50%

        for km in $eye-wall-diameters
          &[value={'"' + km + '"'}] .circle
            $diameter = km-to-px(km)
            height $diameter
            width $diameter

      &.categories-and-matches
        padding 0

        ul
          li
            display inline-block
            margin 0 5px
            position relative

        .categories
          padding 0 20px 20px
          z-index 1 // Clear that little "selected" arrow.

          button
            standard-button()
            margin 0
            padding 0 5px
            position relative
            height 40px

            &[name="category"]
              border-top-right-radius 0
              border-bottom-right-radius 0
              position: static
              width 85px

              &:after
                border 5px solid transparent
                border-top-color $gray-dark
                content " "
                left 50%
                margin 0 0 0 -5px
                position absolute
                top 100%

              &.selected:after
                border 10px solid transparent
                border-top-color $white
                margin 20px 0 0 -10px

            &.help
              border-top-left-radius 0
              border-bottom-left-radius 0
              width 26px
              margin-left -1px

        .matches
          background $gray-light
          box-shadow 0 3px 10px -3px $gray-dark inset
          overflow hidden

          ul[data-category]
            display none
            margin 20px 0

            &.selected
              display block

          button
            img
              border-radius 3px
              height 110px
              width 110px

            &.selected img
              border 3px solid $greenish

            .caption
              background rgba($black, 0.5)
              bottom 0
              color $white
              font-weight bold
              left 0
              padding 3px 0
              position absolute
              text-shadow 0 1px 1px $blacks
              width 100%

      &.surrounding,
      &.exceeding,
      &.feature,
      &.blue,
      &.curve
        button
          display inline-block
          margin 0 5px
          overflow hidden
          white-space nowrap

          img,
          .swatch
            border-radius 3px
            height 25px
            width 25px

          img
            height 70px
            width 70px

          &.selected
            img,
            .swatch
              border 3px solid $greenish

      &.reveal
        padding 0

        .did-you-know
          background $gray-light
          border-bottom 1px solid $gray
          border-radius 4px 4px 0 0
          color $gray-dark
          padding 20px 20px 30px
          text-align left

          header
            color rgba($blue, 0.33)
            float left
            font bold 30px/0.9 $open-sans-condensed
            margin-right 15px
            text-transform uppercase

          .fact
            margin-left 200px
            line-height 1.25

            p
              margin 0

        p.heading
          font-size 30px

        ul
          font-size 13px
          padding 0 15px

          li
            display inline-block
            margin 0 5px 5px

            img
              height 110px
              width 110px

            p
              clearfix()
              margin-top 5px
              overflow hidden

            a,
            button
              standard-button()
              float left
              margin 0
              padding 0.5em

              &:hover
                z-index 1 // Because buttons overlap

              &[name="favorite"],
              &[name="unfavorite"]
                border-top-right-radius 0
                border-bottom-right-radius 0
                width 34px

              &[name="unfavorite"]
                display none

              &.talk
                border-bottom-left-radius 0
                border-top-left-radius 0
                margin-left -1px
                width 77px // +1 to compensate for overlap

            &[data-favorite] button
              &[name="favorite"]
                display none

              &[name="unfavorite"]
                display inline-block

        p.detailed-prompt
          margin -15px 0 10px

    .footer
      clearfix()
      border-top 1px solid $gray-light
      padding 15px 20px

      .progress
        float left
        height 26px
        width 40%

        .message
          font-size 10px
          font-weight bold
          margin-bottom 3px
          text-align center

        .series
          .track
            background $gray
            border-radius 3px
            box-shadow 0 1px 1px $gray-dark inset
            height 5px
            overflow hidden
            position relative

            .fill
              transition(width 1s ease-in-out)
              background $orange
              height 100%
              left 0
              position absolute
              top 0
              width 100%

      .action
        float right
        font-size 11px

        button
          &[name="restart"]
            color $orange
            height 1.5em
            width 1.5em

          &[name="continue"],
          &[name="view-stats"],
          &[name="next-subject"],
          &[name="next-storm"]
            standard-button()
            padding 5px 15px

    // Reveal the appropriate step.
    &[data-step="stronger"] .stronger,
    &[data-step="match"] .categories-and-matches,
    &[data-step="center"] .center,
    &[data-step="eye"] .eye,
    &[data-step="surrounding"] .surrounding,
    &[data-step="exceeding"] .exceeding,
    &[data-step="feature"] .feature,
    &[data-step="blue"] .blue,
    &[data-step="curve"] .curve,
    &[data-step="red"] .red,
    &[data-step="reveal"] .reveal
      display block

    &[data-step="stronger"] .main-pair img
      &.previous
        margin-left 0

      &.subject
        margin-left 320px
        margin-right 0

      &.match
        margin-right -300px
        opacity 0

    &[data-step="center"],
    &[data-step="eye"]
      .main-pair
        .center.point,
        .eye.circle
          opacity 1

    &[data-step="red"] .main-pair
      .center.point
        height 15px
        opacity 1
        width 15px

      .red.point
        opacity 1

    &[data-step="center"],
    &[data-step="eye"],
    &[data-step="surrounding"],
    &[data-step="exceeding"],
    &[data-step="feature"],
    &[data-step="blue"],
    &[data-step="curve"],
    &[data-step="red"],
    &[data-step="reveal"]
      .main-pair img
        &.subject
          height 455px
          margin-right 0
          width 455px

        &.match
          margin-left -300px
          opacity 0

      .step
        max-width 455px

    &[data-step="reveal"]
      .main-pair
        display none

      .step
        max-width none

    &.southern
      .main-pair img.match,
      .categories-and-matches.step img,
      .feature.step img,
      .curve.step img
        -ms-filter  "FlipH"
        filter FlipH
        transform scaleX(-1)

    &.advanced .step.reveal p.detailed-prompt
      display none
