html
  background: $blue
  background: -moz-radial-gradient(circle farthest-side, lighten($blue, 20%), $blue) fixed
  background: -webkit-radial-gradient(circle farthest-side, lighten($blue, 20%), $blue) fixed
  background: radial-gradient(circle farthest-side, lighten($blue, 20%), $blue) fixed
  border-top: 5px solid #000
  color: #fff
  font: 14px $sans-serif
  min-height: 100%

body
  margin: 0

  h1
    font-size: 40px
    font-weight: 300
    margin: 0.25em 0

  h2
    font-weight: 300

  a
    border-bottom: 1px solid
    color: inherit
    text-decoration: none

    &:hover
      color: yellow

  & > nav
    margin: 0 auto
    width: 1000px

    a
      color: inherit
      border-bottom: 0
      display: inline-block
      padding: 15px 10px

      &.logo
        font-size: 20px

  & > .page
    & > .page-nav
      display: none

    & > .page-subpages > .page
      display: none

      &.active
        display: block
