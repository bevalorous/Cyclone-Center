@keyframes wait-for-next
  0%
    background-position: 0 0

  100%
    background-position: 50px 0

.page > .home
  margin: 50px auto
  text-align: center
  width: 1000px

  h1,
  h2
    margin: 2em 0

  .random
    margin: 2em 0 4em

    button[name="random"]
      background: #fff
      color: $blue
      border: 3px solid transparent
      box-shadow: 0 2px 2px -2px #000
      font-weight: bold
      margin: 0 5px
      padding: 3px 10px

      &.loading
        animation: 1s wait-for-next linear infinite
        background-image: linear-gradient(left top, transparent 25%, rgba($blue, 0.25) 25%, rgba($blue, 0.25) 50%, transparent 50%, transparent 75%, rgba($blue, 0.25) 75%)
        background-size: 25px 25px

      &.active
        border-color: #fc0

.zooniverse-footer
  text-align: left

  a
    border: 0

.storm-status
  background: #fff
  border: 1px solid #fff
  box-shadow: 0 3px 3px -3px #000
  box-sizing: border-box
  color: #000
  cursor: pointer
  display: inline-block
  margin: 10px
  position: relative
  text-align: left
  width: 310px

  &:hover
    border-color: #000

  &.active
    background: #ff0
    border-color: #ff0
    cursor: default

  .loader
    animation: 1s wait-for-next linear infinite
    background: linear-gradient(left top, transparent 25%, $blue 25%, $blue 50%, transparent 50%, transparent 75%, $blue 75%)
    background-size: 25px 25px
    bottom: 0
    display: none
    left: 0
    opacity: 0.25
    position: absolute
    right: 0
    top: 0

  &.loading .loader
    display: block

  .preview
    display: block
    max-width: 100%

  .progress
    .track
      background: #000
      height: 5px
      position: relative

      .fill
        background: green
        height: 100%
        left: 0
        position: absolute
        top: 0
        width: 50%

        .complete
          background: #000
          border-radius: 20px
          bottom: 10px
          color: #fff
          font-size: 10px
          font-weight: bold
          line-height: 1
          margin-right: -20px
          padding: 3px 5px
          position: absolute
          right: 0
          text-align: center
          width: 25px

          &:after
            border: 5px solid transparent
            border-top-color: black
            content: ""
            left: 50%
            margin-left: -5px
            position: absolute
            top: 100%

  .info
    padding: 5px

    .name
      font-weight: bold

    .year
      float: right

  .actions
    border-top: 1px solid #ccc
    display: table
    width: 100%

    .action
      border: 0
      border-left: 1px solid #ccc
      display: table-cell
      text-align: center
      text-decoration: none

      &:first-child
        border-left: 0

    button
      color: $blue
      font-size: 12px
      font-weight: bold
      height: 2em
      width: 100%
