.page > .classify
  $min-top = 40px

  .controls
    background: #eee
    box-shadow: 0 2px 3px -1px rgba(#000, 0.5)
    color: #000
    left: 20px
    position: absolute
    text-align: center
    text-shadow: 0 1px #fff
    top: $min-top + 20px
    width: 640px

    .subject
      overflow: hidden
      padding: 2px

      img
        border: 2px solid transparent
        box-sizing: border-box
        display: block
        height: 318px
        margin: 0 auto
        width: 318px

        &.older
          display: none

    .matches.step
      overflow: hidden

      ul
        clearfix()
        margin: 0
        padding: 0

        li
          display: block
          float: left
          width: 20%

          button
            font-size: 12px
            font-weight: bold
            line-height: 1
            width: 100%

      .categories
        ul
          border-top: 1px solid #ccc

          button
            border: 1px solid #ccc
            border-left-color: #fff
            border-top: 0
            box-shadow: 0 1px 0 #fff inset
            height: 45px
            padding: 0 25px
            position: relative

            &.active
              background: #ccc
              border-left-color: #bbb
              box-shadow: 0 1px 10px #999 inset

              &:after
                border: 15px solid transparent
                border-bottom: 0
                border-top-color: #ccc
                content: ""
                height: 0
                left: 50%
                margin: -7px 0 0 -15px
                position: absolute
                top: 100%
                width: 0

      [data-category]
        background: #ccc
        box-shadow: 0 3px 10px rgba(#000, 0.33) inset
        display: none
        padding: 5px

        &.active
          display: block

        button
          padding: 5px

          &.active
            background: #fff
            box-shadow: 0 1px 3px rgba(#000, 0.25)

          img
            box-shadow: 0 1px 3px rgba(#000, 0.25)
            display: block

    .progress
      .followup
        display: none

  // The "stronger" step gets side-by-side subject images.
  &[data-step="stronger"] .controls .subject img
    cursor: pointer
    float: left
    margin: 0

    &.older
      display: block

    &.active
      border-color: #000

  .details
    bottom: 0
    left: 660px
    padding: 30px
    position: absolute
    right: 0
    top: $min-top
